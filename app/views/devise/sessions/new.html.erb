<%= render "devise/shared/header" %>

<div class="relative">
  <%= image_tag 'bg-barber.jpeg', class: "w-full h-[92vh] brightness-50 object-cover object-top"%>
  <div class="absolute top-1/4 left-1/4 flex items-center">
    <div class="p-5 w-80 rounded-md mr-48 border-[1px] border-white backdrop-blur-md">
      <h2 class="text-white text-2xl mb-4">Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mb-5"}) do |f| %>
        <div class="mb-2">
          <%= f.label :email, class: "opacity-80 text-sm text-white" %><br />
          <%= f.email_field :email, autocomplete: "email", class: "h-8" %>
        </div>

        <div class="mb-2">
          <%= f.label :password, class: "opacity-80 text-sm text-white" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "h-8" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-2 flex items-center">
            <%= f.check_box :remember_me, class: "rounded-full mr-1 focus:outline-none" %>
            <%= f.label :remember_me, class: "text-white" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "text-white border-2 border-cyan-300 rounded-md p-1 text-sm ml-[9.5rem] hover:border-white hover:text-cyan-300 duration-300" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
  </div>
  <div>
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  <div class="text-center bg-white p-5 rounded-md w-56 h-36">
    <h1 class="text-lg">Demo Accounts</h1>
    <p>Normal: </p>
    <p>Barber: </p>
  </div>
</div>