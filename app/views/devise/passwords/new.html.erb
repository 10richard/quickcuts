<%= render "devise/shared/header" %>

<div class="relative">
  <%= image_tag 'bg-barber.jpeg', class: "w-full h-[92vh] brightness-50 object-cover object-top"%>
  <div class="absolute top-[20%] left-[20%] flex items-center">
    <div class="p-5 w-80 rounded-md mr-48 border-[1px] border-white backdrop-blur-md">
      <h2 class="text-2xl text-white mb-4">Reset password</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-4">
          <%= f.label :email, class: "opacity-80 text-sm text-white" %><br />
          <%= f.email_field :email, autocomplete: "email", class: "h-8" %>
        </div>

        <div class="mb-2">
          <%= f.submit "Send instructions", class: "text-white border-2 border-cyan-300 rounded-md p-1 text-sm ml-20 hover:border-white hover:text-cyan-300 duration-300" %>
        </div>
      <% end %>

      <div class="text-white">
        <%= render "devise/shared/links" %>
      </div>
      </div>
  </div>